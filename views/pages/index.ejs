<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head')%>
        <style>
            img {
                width: 2rem;
            }

            strong {
                color: blue;
            }

            #texto {
                font-style: italic;
                color: green;
            }
        </style>
        <title>Document</title>
</head>

<body>
    <div class="container">
        <div class="row d-flex justify-content-center p-3 ">
            <form class="col-sm-4 " action="/logout" method="get">
                <h1 class="mb-3 text-center">Bienvenido <%= name %></h1>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary" value="Enviar">Logout</button>
                </div>
            </form>
        </div>
    </div>
        <div class="container">
            <div class="row d-flex justify-content-center p-3">
                <form class="col-sm-4 ">
                    <div class="mb-3 text-center">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" id="userEmail" class="form-control">
                    </div>
                    <div class="mb-3 text-center">
                        <label class="form-label">Nombre</label>
                        <input type="text" name="nombre" id="nombre" class="form-control">
                    </div>
                    <div class="mb-3 text-center">
                        <label class="form-label">Apellido</label>
                        <input type="text" name="apellido" id="apellido" class="form-control">
                    </div>
                    <div class="mb-3 text-center">
                        <label class="form-label">Edad</label>
                        <input type="number" name="edad" id="edad" class="form-control">
                    </div>
                    <div class="mb-3 text-center">
                        <label class="form-label">Alias</label>
                        <input type="text" name="alias" id="alias" class="form-control">
                    </div>
                    <div class="mb-3 text-center">
                        <label class="form-label">Mensaje</label>
                        <input type="text" name="mensaje" id="message" class="form-control">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-primary" onclick="sendNewMessage()">Submit</button>
                    </div>
                </form>
            </div>
            <div class="container">
                <div class="row d-flex justify-content-center p-3">
                    <ul id="messageList" class="col-sm-6"></ul>
                </div>
            </div>
        </div>
        <script src="/socket.io/socket.io.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
        <script src="/main.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

</body>

</html>